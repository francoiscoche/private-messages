{% extends 'base.html.twig' %}

{% block title %}Hello MesssageController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col">
            <h1><i class="fas fa-house-user"></i> Messagerie</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                {{ message }}
            </div>
            {# <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> #}
        {% endfor %}

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning mt-4">
                {{ message }}
            </div>
        {% endfor %}

            <p>Résumé de la messagerie</p>
            <p>Reçu : {{ app.user.received | length }}</p>
            <p>Envoyé : {{ app.user.sent | length }}</p>
            <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
            Voir mes dossiers
            </a>
            <a href="{{ path('app_new') }}" class="btn btn-primary">Envoyer un message</a>
        </div>
    </div>
</div>

{% endblock %}
